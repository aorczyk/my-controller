{
    "name": "My Controller",
    "description": "A MakeCode extension that enables control of your micro:bit through an app https://mymicrobit.medlight.pl/ using Bluetooth or WebUSB (micro:bit (V2) only).",
    "license": "MIT",
    "dependencies": {
        "core": "*",
        "bluetooth": "*"
    },
    "files": [
        "main.blocks",
        "main.ts",
        "README.md"
    ],
    "testFiles": [
        "test.ts"
    ],
    "targetVersions": {
        "target": "8.0.18",
        "targetId": "microbit"
    },
    "supportedTargets": [
        "microbit"
    ],
    "preferredEditor": "tsprj",
    "languageRestriction": "javascript-only",
    "yotta": {
        "config": {
            "microbit-dal": {
                "bluetooth": {
                    "open": 1,
                    "whitelist": 0,
                    "security_level": null
                }
            }
        }
    },
    "disablesVariants": [
        "mbdal"
    ]
}
